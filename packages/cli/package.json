{
  "name": "@slabs/cli",
  "version": "0.0.1",
  "description": "CLI tool for scaffolding Slabs blocks",
  "type": "module",
  "bin": {
    "slabs": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "slabs",
    "cli",
    "scaffold",
    "blocks",
    "editorjs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MarJC5/slabs.git"
  },
  "author": "Martin Jean-Christio <dev@misits.ch>",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.2",
    "@inquirer/prompts": "^8.0.1",
    "handlebars": "^4.7.8",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/handlebars": "^4.0.40",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14"
  }
}
