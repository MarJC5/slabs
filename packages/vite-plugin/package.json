{
  "name": "@slabs/vite-plugin",
  "version": "0.0.1",
  "description": "Vite plugin for Slabs - scans and registers Editor.js blocks",
  "keywords": [
    "vite",
    "vite-plugin",
    "editorjs",
    "blocks",
    "slabs"
  ],
  "license": "MIT",
  "author": "Martin Jean-Christio <dev@misits.ch>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./client.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "client.d.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "fast-glob": "^3.3.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "peerDependencies": {
    "vite": "^7.2.4"
  }
}
