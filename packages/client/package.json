{
  "name": "@slabs/client",
  "version": "0.0.1",
  "description": "Browser runtime for Editor.js integration with Slabs blocks",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "@editorjs/editorjs": "^2.28.0"
  },
  "devDependencies": {
    "@editorjs/editorjs": "^2.28.2",
    "@slabs/vite-plugin": "workspace:*",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.13"
  },
  "keywords": [
    "editorjs",
    "blocks",
    "cms",
    "editor",
    "slabs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MarJC5/slabs.git"
  },
  "author": "Martin Jean-Christio <dev@misits.ch>",
  "license": "MIT",
  "dependencies": {
    "@codexteam/icons": "^0.3.3"
  }
}
