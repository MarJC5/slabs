{
  "name": "slabs/sample",
  "title": "Sample Fields",
  "description": "A comprehensive sample showcasing all available field types including tabs",
  "category": "demo",
  "icon": "Brackets",
  "collapsible": false,
  "fields": {
    "title": {
              "type": "text",
              "label": "Title",
              "placeholder": "Enter title...",
              "required": true,
              "maxLength": 100
            },
    "settings": {
      "type": "tabs",
      "fields": {
        "general": {
          "label": "General",
          "fields": {
            
            "description": {
              "type": "textarea",
              "label": "Description",
              "placeholder": "Enter description...",
              "rows": 4
            },
            "category": {
              "type": "select",
              "label": "Category",
              "options": [
                { "value": "tech", "label": "Technology" },
                { "value": "design", "label": "Design" },
                { "value": "marketing", "label": "Marketing" },
                { "value": "finance", "label": "Finance" }
              ],
              "default": "tech"
            },
            "status": {
              "type": "radio",
              "label": "Status",
              "options": [
                { "value": "draft", "label": "Draft" },
                { "value": "published", "label": "Published" },
                { "value": "archived", "label": "Archived" }
              ],
              "default": "draft"
            },
            "priority": {
              "type": "range",
              "label": "Priority",
              "min": 1,
              "max": 10,
              "step": 1,
              "showValue": true,
              "default": 5
            },
            "publishDate": {
              "type": "date",
              "label": "Publish Date"
            }
          }
        },
        "contact": {
          "label": "Contact & Security",
          "fields": {
            "email": {
              "type": "email",
              "label": "Contact Email",
              "placeholder": "contact@example.com",
              "required": true
            },
            "password": {
              "type": "password",
              "label": "Password",
              "placeholder": "Enter password...",
              "minLength": 8,
              "maxLength": 50,
              "autocomplete": "new-password"
            },
            "website": {
              "type": "link",
              "label": "Website"
            },
            "address": {
              "type": "group",
              "label": "Mailing Address",
              "hint": "Enter your complete mailing address",
              "collapsible": true,
              "fields": {
                "street": {
                  "type": "text",
                  "label": "Street Address",
                  "placeholder": "123 Main St"
                },
                "city": {
                  "type": "text",
                  "label": "City",
                  "placeholder": "Springfield"
                },
                "state": {
                  "type": "text",
                  "label": "State/Province",
                  "placeholder": "CA"
                },
                "zipCode": {
                  "type": "text",
                  "label": "ZIP/Postal Code",
                  "placeholder": "12345"
                },
                "country": {
                  "type": "select",
                  "label": "Country",
                  "options": [
                    { "value": "us", "label": "United States" },
                    { "value": "ca", "label": "Canada" },
                    { "value": "uk", "label": "United Kingdom" },
                    { "value": "au", "label": "Australia" }
                  ],
                  "default": "us"
                }
              }
            },
            "socialMedia": {
              "type": "group",
              "label": "Social Media Profiles",
              "layout": "horizontal",
              "collapsible": true,
              "collapsed": true,
              "fields": {
                "twitter": {
                  "type": "text",
                  "label": "Twitter Handle",
                  "placeholder": "@username"
                },
                "linkedin": {
                  "type": "link",
                  "label": "LinkedIn URL"
                },
                "github": {
                  "type": "text",
                  "label": "GitHub Username",
                  "placeholder": "username"
                }
              }
            }
          }
        },
        "pricing": {
          "label": "Pricing & Inventory",
          "fields": {
            "quantity": {
              "type": "number",
              "label": "Quantity",
              "placeholder": "0",
              "min": 0,
              "step": 1
            },
            "weight": {
              "type": "number",
              "label": "Weight",
              "placeholder": "0",
              "min": 0,
              "step": 0.1,
              "suffix": "kg"
            },
            "price": {
              "type": "number",
              "label": "Price",
              "placeholder": "0.00",
              "min": 0,
              "step": 0.01,
              "prefix": "$",
              "suffix": "USD"
            }
          }
        },
        "display": {
          "label": "Display & Media",
          "fields": {
            "thumbnail": {
              "type": "image",
              "label": "Thumbnail",
              "accept": "image/*",
              "maxSize": 2097152
            },
            "videoEmbed": {
              "type": "oembed",
              "label": "Video Embed",
              "placeholder": "https://www.youtube.com/watch?v=..."
            },
            "attachment": {
              "type": "file",
              "label": "Document Attachment",
              "accept": ".pdf,.doc,.docx,.txt",
              "maxSize": 5242880
            },
            "accentColor": {
              "type": "color",
              "label": "Accent Color",
              "default": "#3b82f6"
            },
            "featured": {
              "type": "checkbox",
              "label": "Featured"
            },
            "enableNotifications": {
              "type": "boolean",
              "label": "Enable Notifications",
              "display": "checkbox"
            },
            "darkMode": {
              "type": "boolean",
              "label": "Dark Mode",
              "display": "switch"
            }
          }
        },
        "content": {
          "label": "Content",
          "fields": {
            "content": {
              "type": "wysiwyg",
              "label": "Main Content",
              "mode": "full"
            },
            "features": {
              "type": "repeater",
              "label": "Features",
              "buttonLabel": "Add Feature",
              "min": 1,
              "max": 5,
              "fields": {
                "name": {
                  "type": "text",
                  "label": "Feature Name",
                  "placeholder": "Enter feature name...",
                  "required": true
                },
                "description": {
                  "type": "textarea",
                  "label": "Feature Description",
                  "placeholder": "Describe this feature...",
                  "rows": 3
                },
                "icon": {
                  "type": "text",
                  "label": "Icon",
                  "placeholder": "âœ¨"
                },
                "enabled": {
                  "type": "checkbox",
                  "label": "Enabled"
                }
              }
            },
            "contentBlocks": {
              "type": "flexible",
              "label": "Content Blocks",
              "buttonLabel": "Add Content Block",
              "hint": "Add different types of content blocks with varying layouts",
              "max": 10,
              "layouts": {
                "textBlock": {
                  "label": "Text Block",
                  "fields": {
                    "heading": {
                      "type": "text",
                      "label": "Heading",
                      "required": true
                    },
                    "content": {
                      "type": "wysiwyg",
                      "label": "Content",
                      "mode": "minimal"
                    },
                    "alignment": {
                      "type": "select",
                      "label": "Text Alignment",
                      "options": [
                        { "value": "left", "label": "Left" },
                        { "value": "center", "label": "Center" },
                        { "value": "right", "label": "Right" }
                      ],
                      "default": "left"
                    }
                  }
                },
                "image": {
                  "label": "Image Block",
                  "fields": {
                    "image": {
                      "type": "image",
                      "label": "Image",
                      "accept": "image/*",
                      "required": true
                    },
                    "caption": {
                      "type": "text",
                      "label": "Caption"
                    },
                    "altText": {
                      "type": "text",
                      "label": "Alt Text"
                    },
                    "width": {
                      "type": "select",
                      "label": "Width",
                      "options": [
                        { "value": "full", "label": "Full Width" },
                        { "value": "wide", "label": "Wide" },
                        { "value": "medium", "label": "Medium" },
                        { "value": "small", "label": "Small" }
                      ],
                      "default": "full"
                    }
                  }
                },
                "callToAction": {
                  "label": "Call to Action",
                  "fields": {
                    "headline": {
                      "type": "text",
                      "label": "Headline",
                      "required": true
                    },
                    "description": {
                      "type": "textarea",
                      "label": "Description",
                      "rows": 3
                    },
                    "buttonText": {
                      "type": "text",
                      "label": "Button Text",
                      "required": true
                    },
                    "buttonLink": {
                      "type": "link",
                      "label": "Button Link"
                    },
                    "backgroundColor": {
                      "type": "color",
                      "label": "Background Color",
                      "default": "#f3f4f6"
                    },
                    "centered": {
                      "type": "boolean",
                      "label": "Center Content",
                      "display": "switch",
                      "default": true
                    }
                  }
                },
                "quote": {
                  "label": "Quote Block",
                  "fields": {
                    "quote": {
                      "type": "textarea",
                      "label": "Quote",
                      "required": true,
                      "rows": 4
                    },
                    "author": {
                      "type": "text",
                      "label": "Author"
                    },
                    "authorTitle": {
                      "type": "text",
                      "label": "Author Title"
                    },
                    "style": {
                      "type": "select",
                      "label": "Quote Style",
                      "options": [
                        { "value": "default", "label": "Default" },
                        { "value": "bordered", "label": "Bordered" },
                        { "value": "highlighted", "label": "Highlighted" }
                      ],
                      "default": "default"
                    }
                  }
                },
                "videoEmbed": {
                  "label": "Video Embed",
                  "fields": {
                    "title": {
                      "type": "text",
                      "label": "Video Title"
                    },
                    "videoUrl": {
                      "type": "oembed",
                      "label": "Video URL",
                      "placeholder": "https://www.youtube.com/watch?v=..."
                    },
                    "description": {
                      "type": "textarea",
                      "label": "Description",
                      "rows": 2
                    },
                    "autoplay": {
                      "type": "boolean",
                      "label": "Autoplay",
                      "display": "checkbox"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
