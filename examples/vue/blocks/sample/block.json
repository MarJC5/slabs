{
  "name": "slabs/sample",
  "title": "Sample Fields",
  "description": "A comprehensive sample showcasing all available field types including tabs",
  "category": "demo",
  "icon": "Brackets",
  "collapsible": false,
  "fields": {
    "title": {
              "type": "text",
              "label": "Title",
              "placeholder": "Enter title...",
              "required": true,
              "maxLength": 100
            },
    "settings": {
      "type": "tabs",
      "fields": {
        "general": {
          "label": "General",
          "fields": {
            
            "description": {
              "type": "textarea",
              "label": "Description",
              "placeholder": "Enter description...",
              "rows": 4
            },
            "category": {
              "type": "select",
              "label": "Category",
              "options": [
                { "value": "tech", "label": "Technology" },
                { "value": "design", "label": "Design" },
                { "value": "marketing", "label": "Marketing" },
                { "value": "finance", "label": "Finance" }
              ],
              "default": "tech"
            },
            "status": {
              "type": "radio",
              "label": "Status",
              "options": [
                { "value": "draft", "label": "Draft" },
                { "value": "published", "label": "Published" },
                { "value": "archived", "label": "Archived" }
              ],
              "default": "draft"
            },
            "priority": {
              "type": "range",
              "label": "Priority",
              "min": 1,
              "max": 10,
              "step": 1,
              "showValue": true,
              "default": 5
            },
            "publishDate": {
              "type": "date",
              "label": "Publish Date"
            }
          }
        },
        "contact": {
          "label": "Contact & Security",
          "fields": {
            "email": {
              "type": "email",
              "label": "Contact Email",
              "placeholder": "contact@example.com",
              "required": true
            },
            "password": {
              "type": "password",
              "label": "Password",
              "placeholder": "Enter password...",
              "minLength": 8,
              "maxLength": 50,
              "autocomplete": "new-password"
            },
            "website": {
              "type": "link",
              "label": "Website"
            }
          }
        },
        "pricing": {
          "label": "Pricing & Inventory",
          "fields": {
            "quantity": {
              "type": "number",
              "label": "Quantity",
              "placeholder": "0",
              "min": 0,
              "step": 1
            },
            "weight": {
              "type": "number",
              "label": "Weight",
              "placeholder": "0",
              "min": 0,
              "step": 0.1,
              "suffix": "kg"
            },
            "price": {
              "type": "number",
              "label": "Price",
              "placeholder": "0.00",
              "min": 0,
              "step": 0.01,
              "prefix": "$",
              "suffix": "USD"
            }
          }
        },
        "display": {
          "label": "Display & Media",
          "fields": {
            "thumbnail": {
              "type": "image",
              "label": "Thumbnail",
              "accept": "image/*",
              "maxSize": 2097152
            },
            "accentColor": {
              "type": "color",
              "label": "Accent Color",
              "default": "#3b82f6"
            },
            "featured": {
              "type": "checkbox",
              "label": "Featured"
            },
            "enableNotifications": {
              "type": "boolean",
              "label": "Enable Notifications",
              "display": "checkbox"
            },
            "darkMode": {
              "type": "boolean",
              "label": "Dark Mode",
              "display": "switch"
            }
          }
        },
        "content": {
          "label": "Content",
          "fields": {
            "content": {
              "type": "wysiwyg",
              "label": "Main Content",
              "mode": "full"
            },
            "features": {
              "type": "repeater",
              "label": "Features",
              "buttonLabel": "Add Feature",
              "min": 1,
              "max": 5,
              "fields": {
                "name": {
                  "type": "text",
                  "label": "Feature Name",
                  "placeholder": "Enter feature name...",
                  "required": true
                },
                "description": {
                  "type": "textarea",
                  "label": "Feature Description",
                  "placeholder": "Describe this feature...",
                  "rows": 3
                },
                "icon": {
                  "type": "text",
                  "label": "Icon",
                  "placeholder": "âœ¨"
                },
                "enabled": {
                  "type": "checkbox",
                  "label": "Enabled"
                }
              }
            }
          }
        }
      }
    }
  }
}
