{
  "name": "slabs/testimonial",
  "title": "Testimonial",
  "description": "Customer testimonial with quote and author details",
  "category": "content",
  "icon": "Quote",
  "collapsible": false,
  "fields": {
    "quote": {
      "type": "textarea",
      "label": "Quote",
      "required": true,
      "placeholder": "This product changed my life...",
      "rows": 4
    },
    "author": {
      "type": "text",
      "label": "Author Name",
      "required": true,
      "placeholder": "Jane Doe"
    },
    "position": {
      "type": "text",
      "label": "Position/Title",
      "placeholder": "CEO at Company"
    },
    "rating": {
      "type": "range",
      "label": "Rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "defaultValue": 5,
      "hint": "1-5 stars"
    },
    "showAvatar": {
      "type": "checkbox",
      "label": "Show Avatar",
      "defaultValue": true
    },
    "avatarUrl": {
      "type": "link",
      "label": "Avatar URL",
      "placeholder": "https://example.com/avatar.jpg"
    }
  }
}
